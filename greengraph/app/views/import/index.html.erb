<style>
.file {
    background: black;
    color: white;
    border: none;
    transform: scale(2, 2);
    border-radius: 3px;
    transition: 0.4s all;
}
.file:hover {
    background: white;
    color: black;
}
body {
    background: white;
}
</style> 
<div style="position: absolute; left: 50%; top: 25%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); border-bottom: 3px solid black; color: black; font-size: 500%; ">IMPORT</div>  
    <%= form_for(:file,
        url: {action: 'submitfile'},
        html: {multipart: true}) do |form| %>
    <div style="position: absolute; left: 50%; top: 40%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: black; font-size: 150%">
        Upload your file:
    </div>
    <div style="position: absolute; left: 50%; top: 52%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: black; font-size: 100%" >
        <%= form.file_field("uploaded_file", class: "file") %><br/>
    </div>
    <br/>
    <div style="position: absolute; left: 50%; top: 65%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%); color: black; font-size: 125%" >
        <%= submit_tag("Upload file", class: "file") %>
    </div>
<% end %>